
@{
    ViewBag.Title = "Patient List";
}

<h2>Patient List</h2>

<!-- Main content -->
<section class="content">

    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <a class="btn btn-success" style="margin-bottom:10px" href="@Url.Action("Create","Patient")"><i class="fa fa-plus"></i>Add New</a>

                </div>
                <hr />
                <!-- /.box-header -->
                <!-- form start -->

                <div class="box-body col-md-12">


                    <table id="patientTable" class="table table-striped table-bordered table-responsive" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>PatName</th>
                                <th>PatContact</th>
                                <th>IsActive</th>
                                <th>EntryDate</th>
                                <th style="width:57px;">PatImage</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                    </table>
                </div>
            </div>
        </div>
    </div>
</section>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/buttons/1.3.1/css/buttons.dataTables.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />


@section scripts{
    <script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>


    <script>
      $(document).ready(function () {

            $("#patientTable").DataTable(
                {
                    "ajax": {
                        "url": "/Patient/GetList",
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "Id" },
                        { "data": "PatName" },
                        { "data": "PatContact" },
                        { "data": "IsActive" },
                        { "data": "EntryDate" },
                        {
                            "data": "PatImage",
                            render: function (data, type, row) {
                                return '<img src="data:image/jpeg;base64,' + data + '" width="70px" height="70px">';
                            }
                        },

                        {

                            "data": "Id",
                            render: function (data) {
                                Id = data;
                                return "<a class='btn btn-primary btn-sm' href='@Url.Action("Details","Patient")/" + data + "'><i class='fa fa-info'></i> View</a><a class='btn btn-default btn-sm'style='margin-left:5px' href='@Url.Action("Edit","Patient")/" + data + "'><i class='fa fa-pencil'></i> Edit</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(" + data + ")><i class='fa fa-trash'></i> Delete</a>";
                            },

                            "orderable": false,
                            "searchable": false,
                            "width": "200px"
                        }


                        ],
                        "language": {

                            "emptyTable": "No data found, Please click on <b>Add New Bike/Car</b> Button"
                        }

                });
      });

           function Delete(id) {
            if(confirm('Are You Sure Want to Delete Record?'))
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete","Patient")/' + id,
                    success: function (data) {
                        if (data.success)
                        {
                            $('#patientTable').DataTable().ajax.reload()

                            sweetAlert
                                ({
                                    title: "Deleted!",
                                    text: data.message,
                                    type: "error"
                                });

                        }
                    }

                });
            }
        }
    </script>
}